<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:transitionGroup="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/scrim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <io.armcha.playtablayout.core.PlayTabLayout
        android:id="@+id/playTabLayout"
        app:layout_constraintTop_toBottomOf="@+id/searchToolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="60dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/results"
        app:layout_constraintTop_toBottomOf="@+id/playTabLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>
    <FrameLayout
        android:id="@+id/searchToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:outlineProvider="bounds"
        android:elevation="@dimen/z_app_bar"
        android:transitionGroup="false"
        android:theme="@style/SearchTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <View
            android:id="@+id/searchBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/item_padding"
            android:layout_marginRight="@dimen/item_padding"
            android:iconifiedByDefault="false"
            android:transitionGroup="true" />
        <FrameLayout
            android:id="@+id/backWrapper"
            android:background="@android:color/transparent"
            android:layout_width="96dp"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingStart="@dimen/spacing_medium"
            android:transitionGroup="false"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back"
                android:transitionName="@string/search_trans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_back_arrow"
                tools:ignore="ContentDescription" />
        </FrameLayout>
        <View
            android:id="@+id/end"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="@dimen/spacing_huge"
            android:layout_marginEnd="@dimen/spacing_huge"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>